#!/bin/bash
# Kills the running minecraft/pixelmon server, if it is running.

source "$( dirname "$0" )/lib.sh"

print_date

if is_server_running; then
  if ! out="$( 2>&1 \
      tmux kill-session -t "$TMUX_SESSION" \
    )"; then
    err "$out"
  fi
  msg "Killed server."
else
  err "Server isn't running."
fi
