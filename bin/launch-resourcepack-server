#!/bin/bash
# Starts a static server that responds with the resource pack zip file.

source "$( dirname "$0" )/lib.sh"

[ -n "$RESOURCEPACK_ZIP" ] || err "The \`\$RESOURCEPACK_ZIP\` environment variable must be set in \`config.env\` to use this script."
[ -f "$RESOURCEPACK_ZIP" ] || err "Resource pack zipfile does not exist: '${RESOURCEPACK_ZIP}'"

check "miniserve"
is_server_running || err "Server must be running for the resource pack server to start."

print_date
msg "Starting Resource Pack Server"

rp_dir="$( dirname "$RESOURCEPACK_ZIP" )"
rp_filename="$( basename "$RESOURCEPACK_ZIP" )"

cmd="miniserve                 \
       -i 0.0.0.0              \
       -p $RESOURCEPACK_PORT   \
       \"$rp_filename\""

tmux new-window                     \
  -d                                \
  -c "$rp_dir"                      \
  -t "$TMUX_SESSION"                \
  -n "$RESOURCEPACK_TMUX_WINDOW"    \
  "$cmd"
